<h1 class="page-header">List Of Projects</h1>

<%= render 'layouts/notice' %>

<% if @company.projects.count > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th class="action_td_with">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @company.projects.each do |project| %>
      <tr>
        <td style="background:<%= project.color %>;width:10px;"></td>
        <td>
          <%= link_to project.name, project_path(project) %>
        </td>
        <td>
          <%= link_to 'show', project_path(project), :class => 'btn btn-mini' %>
          <%= link_to 'edit', edit_project_path(project), :class => 'btn btn-mini' %>
          <%= link_to 'delete', project_path(project), :method => :delete, :class => 'btn btn-mini', :data => { :confirm => 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-block">There are no projects.</div>
<% end %>

<div class="form-actions">
  <%= link_to 'Add New Project', new_project_path, :class => 'btn btn-primary' %>
  <%= link_to 'Back', board_index_path, :class => 'btn' %>
</div>
