<h1 class="page-header">List Of Developers</h1>

<%= render 'layouts/notice' %>

<% if @company.developers.count > 0 %>
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th class="action_td_with">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @company.developers.each do |dev| %>
    <tr>
      <td>
        <%= dev.name %>
      </td>
      <td>
        <%= link_to 'edit', edit_developer_path(dev), :class => 'btn btn-mini' %>
        <%= link_to 'delete', developer_path(dev), :method => :delete, :class => 'btn btn-mini', :data => { :confirm => 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
  </table>
<% else %>
<div class="alert alert-block">There are no developers.</div>
<% end %>

<div class="form-actions">
  <%= link_to 'Add New Developer', new_developer_path, :class => 'btn btn-primary' %>
  <%= link_to 'Back', board_index_path, :class => 'btn' %>
</div>
