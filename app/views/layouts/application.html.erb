<!DOCTYPE html>
<html>
<head>
  <title>TeamScheduler</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to 'Team Scheduler', board_index_path, :class => 'brand' %>
        <ul class="nav">
          <%= li_menu_item session[:authenticated] + ' Board', board_index_path %>
          <%= li_menu_item 'Developers', developers_path %>
          <%= li_menu_item 'Projects', projects_path %>
        </ul>
        <ul class="nav pull-right">
          <%= li_menu_item raw('Logout <i class="icon-signout"></i>'), logout_path %>
        </ul>
      </div>
    </div>
  </div>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
